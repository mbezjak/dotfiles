#!/bin/bash
#

set -o errexit

cd ~/workspace/NixNoteOrg

rm -rf out
mkdir out
nixnote2 sync
nixnote2 export --search='*' --output=out/all.nnex
go build
./NixNoteOrg -input out/all.nnex
rm -rf ~/Sync/notes-evernote
cp -R out/all ~/Sync/notes-evernote
cat > ~/Sync/notes-evernote/extra.css <<'EOF'
p, h1, h2, h3, h4 { max-width: 800px; }
body { margin-left: 5em; }
EOF

newline
tree out/all

exit 0
