#-*-Shell-Script-*-
# https://github.com/Russell91/sshrc

function have { type -P "$1" &> /dev/null; }

# modified commands
alias grep='grep --color=auto'
alias ls='ls --color=auto'
alias less='less --ignore-case'

# ls
alias l='ls -l --human-readable'
alias ll='l --all'
alias lr='l --recursive'
alias lt='ll -t --reverse'
alias lm='ll | less'
eval $(dircolors -b) # colored ls output

# new commands
alias ..='cd ..'
alias ...='cd ../..'
alias du1='du --max-depth=1 --human-readable'
alias hist='history | grep'
alias pg='ps -Afww | grep -i'
alias k='kill -9'
function openports { ss --tcp --processes "$@" | sed '1d' | column -t; }

# command dependent
have vim      && alias vi=vim
have ack-grep && alias ack=ack-grep

have apt-get && {
    # identical interface to the one for pacman in `bashrc`
    alias psp='sudo apt-get install'
    alias prs='sudo apt-get purge'
    alias pss='apt-cache search'
    alias psi='apt-cache show --no-all-versions'
    alias pqs='dpkg-query --list'
    alias pqi='dpkg-query --status'
    alias pql='dpkg-query --listfiles'
    alias pqo='dpkg-query --search'

    function pqb {
        dpkg-query --listfiles "$1" | \
            grep --color=never -E '(/bin)|(/sbin)|(/usr/bin)|(/usr/sbin)'
    }
}
