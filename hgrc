[alias]
l = log --graph
show = log --patch --rev
last = log --limit 1 --stat
last3 = log --limit 3 --stat
dirty = !$HG status | wc -l
cin = !$HG --quiet incoming --template '{node}\n' 2> /dev/null | wc -l
cout = !$HG --quiet outgoing --template '{node}\n' 2> /dev/null | wc -l
hastag = !$HG --quiet tags | grep "^$1\$"

[tortoisehg]
guifork = True

